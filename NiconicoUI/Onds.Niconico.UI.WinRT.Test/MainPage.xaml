    xmlns:local="using:Onds.Niconico.UI.WinRT.Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nc="using:Onds.Niconico.UI"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <RichTextBlock x:Name="RichTextBlock" FontSize="50">
            <Paragraph>
                <Run>
                    text
                </Run>
                <nc:NiconicoWebTextSpan x:Name="NiconicoWebText">
                    test
                    tec
                </nc:NiconicoWebTextSpan>
            </Paragraph>
        </RichTextBlock>
        
        <Button Grid.Row="1" FontSize="160" Content="Change" Click="Button_Click"/>
    </Grid>
</Page>
